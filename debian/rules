#!/usr/bin/make -f
# vim:noet:ts=4:sw=4:

%:
	dh $@

override_dh_auto_configure:
	dh_autoreconf
	./configure --enable-shared=no \
				--without-nova \
				--without-constellation \
				--enable-fhs \
				--prefix=/usr \
				--with-sql=no \
				--with-workdir=/var/lib/cfengine3 \
				CFLAGS="$(CFLAGS)" LDFLAGS="-Wl,-z,defs"

override_dh_auto_build:
	dh_auto_build
	make -C docs html-recursive

### To build faster, skip the testsuite:
# override_dh_auto_test:
#	@echo skipping tests
#
override_dh_clean:
	dh_autoreconf_clean
	dh_clean

override_dh_compress:
	dh_compress -X.cf

override_dh_installinfo:

override_dh_strip:
	dh_strip --dbg-package=cfengine3-dbg

override_dh_installchangelogs:
	rm debian/cfengine3-doc/usr/share/doc/cfengine3/ChangeLog
	dh_installchangelogs
